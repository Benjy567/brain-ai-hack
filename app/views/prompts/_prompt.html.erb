    <strong><%= prompt.prompt %></strong>
    <i><%= prompt.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <h5><%= prompt.ai_class.name %> r√©pond :</h5>
  <p><%= prompt.response_text %></p>
